$black: #000;
$white: #fff;
$red: #f00;


$font-size: 1rem;
$font-family: Helvetica Neue, Helvetica, Arial, sans-serif;;

$large-height: 80px;
$medium-height: $large-height / 2;
$small-height: $large-height / 4;

$large-width: 80px;
$medium-width: $large-width / 2;
$small-width: $large-width / 4;

$screen-small: "only screen and (max-width : 600px)";
// $screen-medium: "only screen and (min-width : 320px) and (max-width : 680px)";
$screen-large: "only screen and (min-width : 600px)";

* { box-sizing: border-box; }
html { font-size: 100%; }

body {
    margin: 0;
    padding: 0;
    font-family: $font-family;
    color: $black;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}


h1,h2,h3,h4,h5,h6,ul,ol,li,p,label,input,textarea,button {
    font-family: $font-family;
    font-size: $font-size;
    text-indent: 0;
    text-align: left;
}

select {
    font-family: $font-family;
    font-size: $font-size * .9;
    text-indent: 0;
    text-align: left;
    outline: none;
}

button {
    appearance: none;
    -webkit-appearance: none;
    background-color: transparent;
    border: 0;
    margin: 0;
    padding: 0;
    outline: none;
}

h1,h2,h3,h4,h5,h6,p,label{
    margin-top: 0;
    margin-top: 1rem;
}

label {
    display: block;
    span {
        display: block;
        padding-bottom: 0.3rem;
    }
}


a, a:link, a:visited, a:hover, a:active {
    color: $black;
    text-decoration: none;
    &.link--active { color: $red }
}

.site {
    display: flex;
    flex-flow: column wrap;
    min-height: 100vh;
}


.site__header {
    height: $large-height;
    .logo__container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: $black;
        background-image: url({{ site.logo | asset_path }});
        background-size: contain;
        background-repeat: repeat-x;
    }
}

.article__header {
    h1 {
        margin-bottom: 0;
    }
    p {
        margin-top: 0;
    }
}

nav.nav__products {
    position: relative;
    z-index: 1;
    width: 200px;

    @media #{$screen-small} {
        width: 100%;
        height: $medium-height;
    }

    ul.product__list {
        list-style: none;
        margin: 1rem $small-width 0;
        padding: 0;


        li.product__list__item {
            margin: 0;
            padding: 0;

            @media #{$screen-small} {
                display: block;
                height: $medium-height;
            }

            a.product__list__item__link {
                font-weight: bold;
                display: block;

                &:first-child {
                    padding-top: 0;
                }

                @media #{$screen-small} {
                    display: flex;
                    align-items: center;
                    height: $medium-height;
                    height: 100%;
                    width: 100%;
                    // padding-left: $small-width;
                    display: flex;
                    align-items: center;
                }

            }
        }
    }
}




nav.nav__products {
    @media #{$screen-small} {
        width: 100%;
        height: $medium-height;
        position: absolute;
        top: $large-height;
        background-color: $red;


        ul.product__list {
            display: none;
        }

        &.open {

            ul.product__list {
                display: block;
                height: 100vh;
                background-color: lightgrey;
                margin: $medium-height 0 0;
                padding: 6px $small-width 0 $small-width;
            }

        } // open
    } // mq
}


button.nav__toggle {
    display: none;
    position: absolute;
    right: 0;
    height: $medium-height;
    width: $medium-width;
    z-index: 1;
    align-items: baseline;
    justify-content: center;
    border: 0;
    border-radius: 50%;
    font-size: 2rem;
    line-height: 0.3;
    background: transparent;
    transform-origin: 50% 50%;
    color: $white;

    &:active {
        background-color: grey;
    }

    transition: transform 0.2s ease-in;
    &.open {
        transform: rotate(45deg);
    }

    @media #{$screen-small} {
        display: flex;
    }

    .nav__indicator {
        position: absolute;
        top: -3px;
        left: 0;
        bottom: 3px;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: center;


    }
}



main {
    flex: 1;
    display: flex;
    flex-flow: row wrap;
    // background: beige;

    @media #{$screen-small} {
        padding-top: $medium-height;
    }

}

article {
    flex: 1;
    @media #{$screen-small} {
        padding: 0 $small-height;
    }
}

figure {
    margin: 0;
    img {
        max-width: 100%;
    }
}


figcaption {
    margin: 0 0 $font-size;
}

footer {
    border-top: 1px solid;
    display: flex;
    align-items: center;
    min-height: $large-height;
    @media #{$screen-small} {
        padding: 0 $small-height;
        min-height: $medium-height;
    }
}


.product__slider {
    @media #{$screen-small} {
        position: absolute;
        top: 0;
        height: 100vh;
        width: 100%;
    }
}
.product__slider__thumbnail {
    opacity: 0;
    position: absolute;
    top: 20%;
    left: 20%;
    bottom: 20%;
    right: 20%;
    background-size: contain;
    background-repeat: no-repeat;
    background-color: transparent;
    background-position: center center;
}
