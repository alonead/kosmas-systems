$black: #000;
$white: #fff;
$red: #f00;


$font-size: 1rem;
$font-family: Helvetica Neue, Helvetica, Arial, sans-serif;;

$large-height: 80px;
$medium-height: $large-height / 2;

$large-width: 80px;
$medium-width: $large-width / 2;

$screen-small: "only screen and (max-width : 600px)";
// $screen-medium: "only screen and (min-width : 320px) and (max-width : 680px)";
$screen-large: "only screen and (min-width : 600px)";

* { box-sizing: border-box; }

body {
    margin: 0;
    padding: 0;
    font-family: $font-family;
    color: $black;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;

    // @media #{$screen-small} {
    //     background: orange;
    // }
    // @media #{$screen-large} {
    //     background: green;
    // }
}


a, a:link, a:visited, a:hover, a:active {
    color: $black;
    text-decoration: none;
    &.link--active { color: $red }
}

button {
    appearance: none;
    -webkit-appearance: none;
    background-color: transparent;
    border: 0;
    margin: 0;
    padding: 0;
    outline: none;
}

.site {
    display: flex;
    flex-flow: column wrap;
    min-height: 100vh;
}


header {
    height: $large-height;
    .logo__container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: $black;
        background-image: url({{ site.logo | asset_path }});
        background-size: contain;
        background-repeat: repeat-x;
    }
}

nav.nav__products {
    background-color: lightblue;

    position: relative;
    width: 200px;

    @media #{$screen-small} {
        width: 100%;
        height: $medium-height;
    }

    ul.product__list {
        @media #{$screen-small} {
            display: none;

            &.open {
                display: block;
            }
        }

        list-style: none;
        margin: 0;
        padding: 0;
        li.product__list__item {
            margin: 0;
            padding: 0;
            a.product__list__item__link {
                display: block;
                padding: 4px;
            }
        }
    }
}




nav.nav__products {
    @media #{$screen-small} {
        width: 100%;
        height: $medium-height;
        position: absolute;
        top: $large-height;


        ul.product__list {
            display: none;
        }

        &.open {
            height: auto;

            ul.product__list {
                display: block;
            }

        } // open
    } // mq
}


button.nav__toggle {
    display: none;
    position: absolute;
    right: 0;
    background-color: lightgrey;
    height: $medium-height;
    width: $medium-width;
    border: 1px solid $black;
    z-index: 1;

    &:active {
        background-color: grey;
    }

    transition: transform 0.2s ease-in;
    &.open {
        transform: rotate(90deg);
    }

    @media #{$screen-small} {
        display: block;
    }
}



main {
    flex: 1;
    display: flex;
    flex-flow: row wrap;
    background: beige;

    @media #{$screen-small} {
        padding-top: $medium-height;
    }

}

article {
    flex: 1;
}

footer {
    background-color: lightblue;
    min-height: $large-height;
}
